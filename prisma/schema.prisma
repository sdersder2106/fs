// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

enum UserRole {
  ADMIN
  AUDITOR
  CLIENT
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String
  role          UserRole  @default(CLIENT)
  avatar        String?
  bio           String?
  certifications String[]
  phone         String?
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?

  // Relations
  companyId     String
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Pentests
  createdPentests    Pentest[]  @relation("PentestCreator")
  assignedPentests   Pentest[]  @relation("PentestAssignees")
  
  // Findings
  createdFindings    Finding[]  @relation("FindingCreator")
  assignedFindings   Finding[]  @relation("FindingAssignee")
  
  // Comments
  comments           Comment[]
  
  // Notifications
  notifications      Notification[]
  
  // Activity Logs
  activityLogs       ActivityLog[]
  
  // API Keys
  apiKeys            ApiKey[]
  
  @@index([companyId])
  @@index([email])
}

model Company {
  id          String   @id @default(cuid())
  name        String
  industry    String?
  size        String?
  logo        String?
  website     String?
  address     String?
  phone       String?
  email       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users       User[]
  targets     Target[]
  pentests    Pentest[]
  findings    Finding[]
  reports     Report[]
  templates   FindingTemplate[]
  
  @@index([name])
}

// ============================================
// TARGETS
// ============================================

enum TargetType {
  WEB_APPLICATION
  API_ENDPOINT
  NETWORK_INFRASTRUCTURE
  MOBILE_APPLICATION
  CLOUD_RESOURCES
}

enum CriticalityLevel {
  CRITICAL
  HIGH
  MEDIUM
  LOW
}

model Target {
  id                String            @id @default(cuid())
  name              String
  description       String?
  url               String?
  ipAddress         String?
  targetType        TargetType
  criticalityLevel  CriticalityLevel  @default(MEDIUM)
  technologyStack   String[]
  businessImpact    String?
  owner             String?
  lastAssessment    DateTime?
  nextAssessment    DateTime?
  isActive          Boolean           @default(true)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  // Relations
  companyId         String
  company           Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  pentests          Pentest[]         @relation("PentestTargets")
  findings          Finding[]
  
  @@index([companyId])
  @@index([targetType])
}

// ============================================
// PENETRATION TESTS
// ============================================

enum PentestStatus {
  PLANNED
  IN_PROGRESS
  REVIEW
  COMPLETED
  ARCHIVED
}

model Pentest {
  id                String        @id @default(cuid())
  title             String
  description       String?
  scope             String?
  startDate         DateTime
  endDate           DateTime
  status            PentestStatus @default(PLANNED)
  progress          Int           @default(0)
  methodology       String?
  complianceFrameworks String[]
  customChecklist   Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  companyId         String
  company           Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  createdById       String
  createdBy         User          @relation("PentestCreator", fields: [createdById], references: [id])
  
  assignees         User[]        @relation("PentestAssignees")
  targets           Target[]      @relation("PentestTargets")
  findings          Finding[]
  reports           Report[]
  activityLogs      ActivityLog[]
  
  @@index([companyId])
  @@index([status])
  @@index([createdById])
}

// ============================================
// FINDINGS / VULNERABILITIES
// ============================================

enum Severity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
  INFORMATIONAL
}

enum FindingStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  ACCEPTED
  FALSE_POSITIVE
}

model Finding {
  id                    String         @id @default(cuid())
  title                 String
  description           String
  severity              Severity
  status                FindingStatus  @default(OPEN)
  cvssScore             Float?
  cvssVector            String?
  reproductionSteps     String?
  proofOfConcept        String?
  businessImpact        String?
  technicalImpact       String?
  likelihood            String?
  riskScore             Float?
  affectedAssets        String[]
  screenshots           String[]
  
  // Remediation
  recommendedFix        String?
  remediationPriority   String?
  fixDeadline           DateTime?
  verificationStatus    String?
  retestNotes           String?
  
  // OWASP Mapping
  owaspCategory         String?
  
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  // Relations
  companyId             String
  company               Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  pentestId             String
  pentest               Pentest        @relation(fields: [pentestId], references: [id], onDelete: Cascade)
  
  targetId              String
  target                Target         @relation(fields: [targetId], references: [id])
  
  createdById           String
  createdBy             User           @relation("FindingCreator", fields: [createdById], references: [id])
  
  assigneeId            String?
  assignee              User?          @relation("FindingAssignee", fields: [assigneeId], references: [id])
  
  comments              Comment[]
  activityLogs          ActivityLog[]
  
  @@index([companyId])
  @@index([pentestId])
  @@index([severity])
  @@index([status])
  @@index([targetId])
}

// ============================================
// FINDING TEMPLATES
// ============================================

model FindingTemplate {
  id                  String    @id @default(cuid())
  title               String
  description         String
  severity            Severity
  cvssVector          String?
  reproductionSteps   String?
  recommendedFix      String?
  owaspCategory       String?
  isPublic            Boolean   @default(false)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // Relations
  companyId           String?
  company             Company?  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  @@index([companyId])
}

// ============================================
// COMMENTS & COLLABORATION
// ============================================

model Comment {
  id          String   @id @default(cuid())
  content     String
  attachments String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  findingId   String
  finding     Finding  @relation(fields: [findingId], references: [id], onDelete: Cascade)
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  @@index([findingId])
  @@index([authorId])
}

// ============================================
// REPORTS
// ============================================

enum ReportType {
  EXECUTIVE_SUMMARY
  TECHNICAL_REPORT
  COMPLIANCE_REPORT
  REMEDIATION_PLAN
  COMPARISON_REPORT
}

enum ReportFormat {
  PDF
  DOCX
  HTML
  CSV
  JSON
}

model Report {
  id              String       @id @default(cuid())
  title           String
  reportType      ReportType
  format          ReportFormat
  content         Json?
  filePath        String?
  isGenerated     Boolean      @default(false)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  companyId       String
  company         Company      @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  pentestId       String
  pentest         Pentest      @relation(fields: [pentestId], references: [id], onDelete: Cascade)
  
  @@index([companyId])
  @@index([pentestId])
}

// ============================================
// NOTIFICATIONS
// ============================================

enum NotificationType {
  CRITICAL_FINDING
  STATUS_CHANGE
  COMMENT_MENTION
  ASSIGNMENT
  DEADLINE_REMINDER
  REPORT_READY
}

model Notification {
  id          String            @id @default(cuid())
  type        NotificationType
  title       String
  message     String
  link        String?
  isRead      Boolean           @default(false)
  createdAt   DateTime          @default(now())

  // Relations
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([isRead])
}

// ============================================
// ACTIVITY LOG / AUDIT TRAIL
// ============================================

enum ActivityType {
  CREATE
  UPDATE
  DELETE
  STATUS_CHANGE
  COMMENT
  ASSIGNMENT
  REPORT_GENERATE
}

model ActivityLog {
  id          String        @id @default(cuid())
  type        ActivityType
  entity      String
  entityId    String
  action      String
  changes     Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime      @default(now())

  // Relations
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  
  pentestId   String?
  pentest     Pentest?      @relation(fields: [pentestId], references: [id], onDelete: Cascade)
  
  findingId   String?
  finding     Finding?      @relation(fields: [findingId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([entity])
  @@index([createdAt])
}

// ============================================
// API KEYS
// ============================================

model ApiKey {
  id          String   @id @default(cuid())
  name        String
  key         String   @unique
  isActive    Boolean  @default(true)
  lastUsed    DateTime?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([key])
}
