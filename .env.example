# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Example for local development:
# DATABASE_URL="postgresql://postgres:password@localhost:5432/base44"

# Example for Supabase:
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Example for Railway:
# DATABASE_URL="postgresql://postgres:password@containers-us-west-xxx.railway.app:7xxx/railway"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-min-32-characters-long"

# Generate a secret with:
# openssl rand -base64 32

# Email (Optional - for notifications)
EMAIL_SERVER="smtp://user:password@smtp.provider.com:587"
EMAIL_FROM="noreply@base44.com"

# File Upload (Optional)
# Option 1: Uploadcare
UPLOADCARE_PUBLIC_KEY="your_public_key"
UPLOADCARE_SECRET_KEY="your_secret_key"

# Option 2: Cloudinary
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# Option 3: AWS S3
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="base44-uploads"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry (Optional - for error tracking)
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"
NEXT_PUBLIC_ENABLE_REPORTS="true"
NEXT_PUBLIC_ENABLE_TEMPLATES="true"

# App Configuration
NEXT_PUBLIC_APP_NAME="Base44"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Rate Limiting (Optional)
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Session Configuration
SESSION_MAX_AGE="2592000"
SESSION_UPDATE_AGE="86400"
